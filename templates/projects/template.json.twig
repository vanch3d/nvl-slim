	{% macro linkedin(name,last,width) %}
		"{{ name }}"{{ not(last)?"," }}
	{% endmacro %}
	{% macro github(repo) %}
	"{{ repo }}"{{ not(last)?"," }}
	{% endmacro %}
{% import _self as forms %}
{
	"id"	:	"{{ project.id }}",
	"name" : 	"{{ project.name }}",
	"title": 	"{{ block('project_title')|striptags|trim}}",
	"institution": 	"{% block project_inst '' %}",
	"location": 	"{% block project_loc '' %}",
    "lat": 	"{% block project_lat '' %}",
    "lon": 	"{% block project_lon '' %}",
	"start":	"{% block project_start '' %}",
	"end": 	"{% block project_end '' %}",
	"description": 	"{{ block('project_overview')|striptags|
				split("\n")|join("")|
				split("\t")|join(" ")|
				slice(0,500)~"[...]" }}",
    "people":   [{{ block('project_people') }}],
    "images":   "{{ urlFor('api.images.project',{'name': project.id}) }}",
        "url":  "{{ urlFor('project.named',{'name': project.id}) }}"
}
